{
    "title": "设计模式 python",
    "author" : "fbigun",
    "description": "python中各种设计模式的实现方法",
    "language" : "zh-hans",
    "gitbook" : "3.2.3",
    "root": ".",

    "extension": ["epub", "pdf", "mobi"],

    "plugins": ["prism", "autocover", "-highlight", "-lunr", "-search", "-sharing", "search-plus"],

    "pluginsConfig": {
        "prism": {
            "css": [
                "prismjs/themes/prism-solarizedlight.css"
            ]
        },
        "autocover": {
            "title": "设计模式 python3",
            "author": "fbigun",
            "font": {
                "family": "Noto Sans Mono"
            },
            "background": {
                "color": "#FFF"
            },
            "template": "./templates/default.svg"
        }
    },

    "variables": {},

    "links": {
        "sidebar": {
            "主页" : "https://pyDesignPattern.github.io"
        }
    },

    "pdf": {
        "fontSize": 10,
        "paperSize": "a6",
        "fontFamily": "Noto serif Mono",
        "margin":{
            "top": 8,
            "bottom": 8,
            "right": 12,
            "left": 12
        },
        "headerTemplate": null
    }
}
